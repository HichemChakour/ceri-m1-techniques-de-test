<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Ajoutez vos modules ici, sauf ceux spécifiques à TreeWalker -->
    <module name="TreeWalker">
        <!-- Exemple de modules sous TreeWalker -->
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>
    </module>
    <!-- Placez LineLength ici, hors de TreeWalker -->
    <module name="LineLength">
        <property name="max" value="120"/> <!-- Longueur maximale autorisée -->
        <property name="ignorePattern" value="^.*$"/> <!-- Exclusions si nécessaires -->
    </module>
</module>
